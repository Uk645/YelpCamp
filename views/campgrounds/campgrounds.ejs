<%- include('../partials/header'); -%>
<div class="container">
    <header>
        <div class="jumbotron text-center">
            <h1>Welcome to the Yelpcamp</h1>
            <a href="/campgrounds/new" class="btn btn-primary">add new campground</a>
        </div>
    </header>
</div>
<div class="container">
    <div class="row" style="display:flex; flex-wrap:wrap; ">
        <%    campgrounds.forEach(function(camp){ %>
        
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img style="height:250; width:250;" src="<%=camp.image%>">
                    <div class="caption text-center">
                        <h6><%=camp.name%></h6>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-sm btn-primary">More Info</a>
                    </div>
                </div>
            </div>
         <% }) %>
        </div>

</div>
<%- include('../partials/footer'); -%>