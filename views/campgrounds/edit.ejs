<%- include('../partials/header'); -%>
<div class="container">
    <h1 id="disp-form-name">Edit <%= campground.name %>:</h1>
    <div  class="disp-form">
        <form class="form-group" action="/campgrounds/<%= campground._id %>?_newmethod=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type=text name=campground[name] value= "<%=campground.name%>">
            </div>
            <div class="form-group">
                <input class="form-control" type="url" name=campground[image] value= "<%= campground.image %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" >Submit</button >
            </div>
            <a href="/campgrounds" class="btn btn-primary btn-sm">GO back</a>
        </form>
    </div>
</div>
<%- include('../partials/footer'); -%>